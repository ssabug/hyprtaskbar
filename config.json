{
    "config":{
        "startButton":{
            "position":"left",
            "text":"START",
            "enableImage": true,
            "image":"widget/arch.png",
            "command":"${HOME}/.config/rofi/launchers/type-6/launcher_2.sh"
        },
        "workspaces":{
            "position":"left"
        },
        "quickLaunch":{
            "position":"left",
            "programList":["kitty","dolphin"]
        },
        "focusedClient":{
            "position":"center"
        },
        "sysTray":{
            "position":"right"
        },
        "networkInfo":{
            "position":"right"
        },
        "audio":{
            "position":"right",
            "settingsCommand":"pavucontrol"
        },
        "batteryLevel":{
            "position":"right"
        },
        "time":{
            "position":"right",
            "displayFormat":"%H:%M  %A %d.%m.%Y"
        }
    },
    "global":{
        "appRootFolder":"/usr/share/hyprtaskbar",
        "appHomeFolder":"${HOME}/.config/hyprtaskbar",
        "debug":true,
        "fileLogging":true,
        "logFile" : "log.txt"
    }
}
